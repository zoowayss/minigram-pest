.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.upload-section {
  width: 100%;
  margin-bottom: 30rpx;
}

.upload-btn {
  width: 100%;
  height: 400rpx;
  border: 2rpx dashed #ccc;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f8f8f8;
}

.upload-btn image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.upload-placeholder {
  color: #999;
  font-size: 28rpx;
}

.detect-btn {
  width: 80%;
  height: 80rpx;
  background-color: #07c160;
  color: white;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  margin: 30rpx 0;
}

.result-section {
  width: 100%;
  margin-top: 30rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.result-section image {
  width: 100%;
  height: 400rpx;
  border-radius: 10rpx;
}

.result-info {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
}

.info-item {
  margin: 10rpx 0;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.info-item text:first-child {
  color: #666;
  margin-right: 10rpx;
} 